CXXFLAGS = -O2 -Wall -I/usr/src/postgresql-7.3.2-1/src/include
LDLIBS = -L/usr/src/postgresql-7.3.2-1/src/backend -lpostgres

%.so: %.o
	$(CXX) $(LDFLAGS) $(TARGET_ARCH) -shared $^ $(LOADLIBES) $(LDLIBS) -o $@

distribution.so : distribution.o
distribution.o : distribution.cpp

clean :
	rm -f distribution.so distribution.o

.PHONY : clean
