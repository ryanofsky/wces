CXXFLAGS = -fpic -O2 -Wall -I/usr/include/postgresql/server -I/usr/include/postgresql

%.so: %.o
	$(CXX) $(LDFLAGS) $(TARGET_ARCH) -shared $^ $(LOADLIBES) $(LDLIBS) -o $@

scattered_distribution.so : scattered_distribution.o
scattered_distribution.o : scattered_distribution.cpp

clean :
	rm -f scattered_distribution.o distribution.o

.PHONY : clean
