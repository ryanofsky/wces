OPT=
INC=/usr/include/postgresql
LIB=/lib/libpostgres.a
OUTPUT=scattered_distribution.dll

$(OUTPUT) : scattered_distribution.o
	g++ -shared -o $(OUTPUT) scattered_distribution.o $(LIB)

scattered_distribution.o : scattered_distribution.cpp
	g++ $(OPT) -o scattered_distribution.o -c -I$(INC) scattered_distribution.cpp

clean :
	rm scattered_distribution.o $(OUTPUT)
